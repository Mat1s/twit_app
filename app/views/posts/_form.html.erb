<div class="container">
  <div class="col-lg-4 col-md-3 col-sm-2">
  </div>
  <div class="col-lg-4 col-md-6 col-sm-8">
    <%= form_for @post, :html => { :class => "form-horizontal post" } do |f| %>

      <% if @post.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <%= hidden_field_tag :user_id, @current_user.id %>
      <div class="row">  
        <div class="col-lg-10">
          <%= f.text_area :body, :class => 'form-control', required: true, placeholder: "Twitt text", maxlength: 140, cols: 42, rows: 4, style: "resize: none;", autofocus: true %>
          <%= f.file_field :image, :class => 'form-control custom-file-input', accept: 'image/png, image/gif, image/jpeg' %>
        </div>
        <div class="col-lg-2">
          <%= f.submit "Twitt", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-lg-4 col-md-3 col-sm-2">
  </div>
</div>
